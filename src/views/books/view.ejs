<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <div class="card" style="width: 18rem;">
                    <div class="card-header">
                      Название: <%= book.title %>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Просмотров: <%= count %></li>
                        <li class="list-group-item">Описание: <%= book.description %></li>
                        <li class="list-group-item">Авторы: <%= book.authors %></li>
                        <li class="list-group-item">В избранном: <%= book.favorite?"Да":"Нет" %></li>
                        <li class="list-group-item">Файл обложки: <%= book.fileCover %></li>
                        <li class="list-group-item">Файл книги: <%= book.fileBook %></li>
                    </ul>
                  </div>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../port/layout-end') %>