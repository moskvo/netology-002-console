<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Название</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputTitle">Автор(ы)</label>
        <input type="text"
               value="<%= book.authors %>"
               name="authors"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputTitle">В избранное</label>
        <input type="checkbox"
               value="<%= book.favorite || true %>"
               name="favorite"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputTitle">Обложка</label>
        <input type="file"
               accept="image/*"
               value="<%= book.fileCover %>"
               name="filecover"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputTitle">Файл с книгой</label>
        <input type="file"
               value="<%= book.fileName %>"
               name="filebook"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>